<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TurnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X's turn"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/NewGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <Button
        android:id="@+id/NewGame"
        android:layout_width="276dp"
        android:layout_height="65dp"
        android:layout_marginBottom="24dp"
        android:text="New Game"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GameButton1_1"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/GameButton2_1"
        app:layout_constraintEnd_toStartOf="@+id/GameButton1_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/GameButton1_2"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/GameButton1_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GameButton1_1"
        app:layout_constraintTop_toTopOf="@+id/GameButton1_1" />

    <Button
        android:id="@+id/GameButton1_3"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GameButton1_2"
        app:layout_constraintTop_toTopOf="@+id/GameButton1_2" />

    <Button
        android:id="@+id/GameButton2_1"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/GameButton3_1"
        app:layout_constraintEnd_toStartOf="@+id/GameButton2_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GameButton1_1" />

    <Button
        android:id="@+id/GameButton2_2"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/GameButton2_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GameButton2_1"
        app:layout_constraintTop_toTopOf="@+id/GameButton2_1" />

    <Button
        android:id="@+id/GameButton2_3"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GameButton2_2"
        app:layout_constraintTop_toTopOf="@+id/GameButton2_2" />

    <Button
        android:id="@+id/GameButton3_1"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/TurnDisplay"
        app:layout_constraintEnd_toStartOf="@+id/GameButton3_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GameButton2_1" />

    <Button
        android:id="@+id/GameButton3_2"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/GameButton3_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GameButton3_1"
        app:layout_constraintTop_toTopOf="@+id/GameButton3_1" />

    <Button
        android:id="@+id/GameButton3_3"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#808080"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GameButton3_2"
        app:layout_constraintTop_toTopOf="@+id/GameButton3_2" />

</androidx.constraintlayout.widget.ConstraintLayout>